   "version": "0.2.0",
   "configurations": [
      {
         "name": "Launch localhost",
         "type": "firefox",
         "request": "launch",
         "reAttach": true,
         "url": "http://localhost:3000",
         "webRoot": "${workspaceFolder}"
      },
      {
         "name": "Attach",
         "type": "firefox",
         "request": "attach"
      },
      {
         "name": "Launch WebExtension",
         "type": "firefox",
         "request": "launch",
         "reAttach": true,
         "addonPath": "${workspaceFolder}"
      }
   ]
}